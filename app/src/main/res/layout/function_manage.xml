<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:text="모든 파일 삭제 기능"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/whatIsRemoveAllFilesFunctionBtn"
            android:layout_toLeftOf="@+id/useRemoveAllFilesFunctionBtn"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/useRemoveAllFilesFunctionBtn"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:textSize="18dp"
            android:layout_alignParentLeft="true"
            android:text="모든 파일 암호화 기능"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:id="@+id/whatIsEncryptAllFilesFunctionBtn"
            android:layout_toLeftOf="@+id/useEncryptAllFilesFunctionBtn"/>
        <Button
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/useEncryptAllFilesFunctionBtn"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</LinearLayout>