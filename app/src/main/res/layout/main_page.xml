<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/appStatus"
        android:id="@+id/appStatusIcon"
        android:src="@drawable/ex"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Status"
        android:layout_above="@+id/meanlesss"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:id="@+id/appStatus"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/meanlesss"
        android:text="^_______^"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="20dp"
        android:visibility="invisible"/>
    <ImageButton
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/settingBtn"
        android:src="@drawable/ex"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/meanlesss"/>
</RelativeLayout>
